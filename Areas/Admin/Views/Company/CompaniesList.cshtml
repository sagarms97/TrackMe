@model List<Company>


<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Companies List</h4>
            <a asp-controller="Company" asp-action="Upsert_Company" class="btn btn-light btn-sm">
                <i class="bi bi-plus-lg"></i>  Create New Company
            </a>
        </div>
        <div class="card-body">
<table id="tblData" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Ph. No</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.name</td>
                <td>@obj.StreetAddress</td>
                <td>@obj.City</td>
                <td>@obj.State</td>
                <td>@obj.PostalCode</td>
                <td>@obj.PhoneNumber</td>
                <td>
                    <div class="d-flex">
                        <!-- Edit Button -->
                        <form asp-action="Upsert_Company" asp-route-id="@obj.id" method="get" class="mx-1">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                        </form>

                        <!-- Delete Button -->
                        <form asp-action="Delete" asp-route-id="@obj.id" method="post" class="mx-1">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this record?')">
                                <i class="bi bi-trash-fill"></i>  Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#tblData').DataTable();
        });
    </script>
}