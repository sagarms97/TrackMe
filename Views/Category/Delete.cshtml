@model Category

<form method="post">
    <div class="border p-3 mt-4 col-md-6 ">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" type="text" disabled class="form-control" />  @* //tag Helpers *@
        </div>
        <div class="mb-3 ">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" disabled type="number" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>

