@model Category

<form method="post">
    @* <input asp-for="Id" hidden /> *@   @* You need to mention id , if in case name will be CategoryId Somthing else *@
    <div class="border p-3 mt-4 col-md-6 ">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Category
            </h2>
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@  @* 3 types of summary -1 All, 2 ModelOnly , 3 None *@
        <div class="mb-3">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" type="text" class="form-control" />  @* //tag Helpers *@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 ">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
